<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterface">

    <TextView
        android:id="@+id/user_interface_title"
        android:layout_width="313dp"
        android:layout_height="84dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/alegreya_bold"
        android:text="@string/user_interface"
        android:textSize="40sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/favorites_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Favorites"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/preference_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/preference_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferences"
        android:fontFamily="@font/alegreya_bold"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/user_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/price_pref_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store Price"
        android:layout_marginRight="50dp"
        app:layout_constraintEnd_toStartOf="@id/hour_pref_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_pref_text" />

    <Button
        android:id="@+id/hour_pref_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store hour"
        android:layout_marginLeft="50dp"
        app:layout_constraintStart_toEndOf="@+id/price_pref_button"
        app:layout_constraintTop_toBottomOf="@+id/hour_pref_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/activities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activities"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/alegreya_bold"
        android:textSize="30dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/price_pref_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/to_map_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mapping"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/to_filter_button"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activities" />

    <Button
        android:id="@+id/to_filter_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Filtering"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/to_map_button"
        app:layout_constraintTop_toBottomOf="@+id/activities"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/hour_pref_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Hour"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@+id/price_pref_text"
        app:layout_constraintTop_toBottomOf="@+id/favorites_button"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/price_pref_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:gravity="center"
        android:hint="Price"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toStartOf="@id/hour_pref_text"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favorites_button" />

    <TextView
        android:id="@+id/user_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:fontFamily="@font/alegreya_bold"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/user_interface_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>